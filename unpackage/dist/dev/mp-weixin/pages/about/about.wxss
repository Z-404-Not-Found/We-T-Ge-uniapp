.container {
  height: 86%;
  overflow: auto;
  box-sizing: border-box;
  margin: 16px;
  padding: 16px;
  transition: box-shadow 0.3s, background-color 0.3s;
}
.container-hover {
  box-shadow: 24rpx 24rpx 24rpx 24rpx rgba(0, 0, 0, 0.1), -16rpx -16rpx 16rpx white;
  background-color: #fff;
}
.text {
  color: #4a4a4a;
  font-size: 36rpx;
  text-indent: 72rpx;
}
.tip {
  color: #999;
  font-size: 28rpx;
}
.source {
  color: #999;
  font-size: 24rpx;
